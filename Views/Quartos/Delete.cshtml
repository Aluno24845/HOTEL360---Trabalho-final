@model HOTEL360___Trabalho_final.Models.Quartos

@{
    ViewData["Title"] = "Apagar Quarto";
}

<br />
<h1 style="color: #fff;">Apagar Quarto</h1>
<h3 style="color: #fff;">Tem a certeza que pretende eliminar este quarto?</h3>

<div class="row mb-4">
    <div class="col-md-6">
        <div class="card">
            <div class="row no-gutters">
                <div class="col-md-12">
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Nome)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Nome)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Capacidade)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Capacidade)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Preco)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Preco)€
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Imagem)
                            </dt>
                            <dd class="col-sm-8">
                                <img src="~/Imagens/@Html.DisplayFor(model => model.Imagem)"
                                     alt="imagem do quarto @Html.DisplayFor(model => model.Nome)"
                                     title="@Html.DisplayFor(model => model.Nome)"
                                     width="100px" />
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Localizacao)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Localizacao)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Descricao)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Descricao)
                            </dd>
                        </dl>
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Apagar" class="btn btn-danger" />
                            <a class="btn btn-secondary" asp-action="Index">Regressar à listagem de Quartos</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
