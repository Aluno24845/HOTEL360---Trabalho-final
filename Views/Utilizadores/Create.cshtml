@model HOTEL360___Trabalho_final.Models.CriarUtilizadores
@{
    ViewData["Title"] = "Adicionar Utilizador";
}

<br />
<h1 style="color: #fff;">Adicionar Utilizador</h1>

<div class="row">
    <div class="col-md-8 mb-4">
        <div class="card">
            <div class="row no-gutters">
                <div class="col-md-12">
                    <div class="card-body">
                        @* este objeto irá levar os conteúdos do formulário para o SERVIDOR
                        - o atributo 'method' define como os dados são enviados
                        - o atributo 'enctype' define que vamos enviar, também, ficheiros
                        *@

                        <form asp-action="Create"
                              method="post"
                              enctype="multipart/form-data">

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="Email" class="control-label"></label>
                                        <input asp-for="Email" class="form-control" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Password" class="control-label"></label>
                                        <input asp-for="Password" class="form-control" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ConfirmPassword" class="control-label"></label>
                                        <input asp-for="ConfirmPassword" class="form-control" />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-8">
                                    <div class="form-group">
                                        <label asp-for="Nome" class="control-label"></label>
                                        <input asp-for="Nome" class="form-control" />
                                        <span asp-validation-for="Nome" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="Telemovel" class="control-label"></label>
                                        <input asp-for="Telemovel" class="form-control" />
                                        <span asp-validation-for="Telemovel" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Avatar" class="control-label"></label>
                                        @* File Upload
                                        - não esquecer definir:
                                        - 'accept'' para ajudar os utilizadores a escolher o tipo certo de ficheiro
                                        - 'name' para acederem ao ficheiro no Servidor
                                        *@
                                        <input type="file" name="ImagemLogo" accept=".png,.jpg,.jpeg" class="form-control" />
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="DataNascimento" class="control-label"></label>
                                        <input asp-for="DataNascimento" class="form-control" />
                                        <span asp-validation-for="DataNascimento" class="text-danger"></span>
                                    </div>
                                    @* lista os tipos de utilizadores existentes*@
                                    <div class="form-group">
                                        <label asp-for="Tipo" class="control-label"></label>
                                        <select asp-for="Tipo" class="form-control">
                                            <option value="-1">-- Escolha um tipo de utilizador --</option>
                                            <option value="Gerentes">Gerentes</option>
                                            <option value="Hospedes">Hospedes</option>
                                            <option value="Reccecionistas">Reccecionistas</option>
                                        </select>
                                    </div>
                                    <div class="form-group mb-2">
                                        <label asp-for="NIF" class="control-label"></label>
                                        <input asp-for="NIF" class="form-control" />
                                        <span asp-validation-for="NIF" class="text-danger"></span>
                                    </div>
                                    <div class="mt-3">
                                        <br />
                                        <input type="submit" value="Adicionar" class="btn btn-primary" />
                                        <a class="btn btn-secondary" asp-action="Index">Regressar à listagem de Utilizadores</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
