@model IEnumerable<HOTEL360___Trabalho_final.Models.Utilizadores>

@{
    ViewData["Title"] = "Utilizadores";
}
<br />
<h1 style="color: #ffffff;">Lista de Utilizadores</h1>

<h4>
    <button class="btn-create" onclick="window.location.href='@Url.Action("Create")'">Novo Utilizador</button>
</h4>
<br />

<div class="row">
    @foreach (var utilizador in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card">
                @* vou mudar o nome da imagem para a imagem, propriamente dita *@
                <img src="~/Imagens/@utilizador.Avatar" class="card-img-top" alt="Avatar do utilizador @utilizador.Nome" title="@utilizador.Nome">
                <div class="card-body">
                    <h4 class="card-title">@Html.DisplayFor(modelItem => utilizador.Nome)</h4>
                    <p class="card-text"><strong>Nº Telemóvel: </strong> @Html.DisplayFor(modelItem => utilizador.Telemovel)</p>
                    <p class="card-text"><strong>Data de Nascimento: </strong> @Html.DisplayFor(modelItem => utilizador.DataNascimento)</p>
                    <p>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@utilizador.Id">Editar</a>
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@utilizador.Id">Detalhes</a> 
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@utilizador.Id">Apagar</a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>

<style>
    /* Estilos para o botão */
    .btn-create {
        background-color: #e78d3c; /* Cor de fundo laranja, pode ser ajustada conforme necessário */
        color: #fff; /* Cor do texto branco */
        border: none; /* Remove a borda padrão */
        padding: 10px 20px; /* Espaçamento interno */
        font-size: 18px; /* Tamanho da fonte */
        cursor: pointer; /* Mostra um cursor ao passar o mouse */
        border-radius: 5px; /* Borda arredondada */
        transition: background-color 0.3s ease; /* Efeito de transição suave */
    }

        /* Hover (quando o mouse passa por cima) */
        .btn-create:hover {
            background-color: #e06f09; /* Cor de fundo mais escura ao passar o mouse */
        }
</style>
