@model HOTEL360___Trabalho_final.Models.Utilizadores

@{
    ViewData["Title"] = "Editar Utilizador";
}

<h1>Editar Utilizador</h1>

<h4>Utilizador</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit"
              method="post"
              enctype="multipart/form-data">
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Avatar" /> <!-- Campo oculto para manter o nome da imagem -->
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telemovel" class="control-label"></label>
                <input asp-for="Telemovel" class="form-control" />
                <span asp-validation-for="Telemovel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Avatar" class="control-label"></label>
                @* Exibe a imagem atual do Avatar *@
                @if (!string.IsNullOrEmpty(Model.Avatar))
                {
                    <div>
                        <img src="~/Imagens/@Model.Avatar" alt="Avatar" style="max-width: 150px; max-height: 150px;" />
                    </div>
                }
                @* File Upload *@
                <input type="file" name="ImagemLogo" accept=".png,.jpg,.jpeg" class="form-control" />
                <span asp-validation-for="Avatar" class="text-danger"></span>
            </div>           
            <div class="form-group">
                <label asp-for="DataNascimento" class="control-label"></label>
                <input asp-for="DataNascimento" class="form-control" type="date" value="@Model.DataNascimento.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br />
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regressar à listagem de Utilizados</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
