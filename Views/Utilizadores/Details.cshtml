@model HOTEL360___Trabalho_final.Models.Utilizadores

@{
    ViewData["Title"] = "Detalhes do Utilizador";
}

<br />
<h1 style="color: #fff;">Detalhes do Utilizador</h1>
<br />

<div class="row mb-4">
    <div class="col-md-6">
        <div class="card">
            <div class="row no-gutters">
                <div class="col-md-8">
                    <div class="card-body">
                        <h1 class="card-title">@Html.DisplayFor(model => model.Nome)</h1>
                        <br />
                        <p class="card-text"><strong>Número de Telemóvel: </strong> @Html.DisplayFor(model => model.Telemovel)</p>
                        <p class="card-text"><strong>Data de Nascimento: </strong> @Html.DisplayFor(model => model.DataNascimento)</p>
                        <p class="card-text"><strong>Email: </strong> @ViewData["UserEmail"]</p>
                        <br />
                        <div class="mt-3">
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
                            <a class="btn btn-secondary" asp-action="Index">Regressar à listagem de Utilizadores</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 d-flex align-items-center justify-content-center">
                    <img src="~/Imagens/@Html.DisplayFor(model => model.Avatar)"
                         alt="Avatar de @Html.DisplayFor(model => model.Nome)"
                         title="@Html.DisplayFor(model => model.Nome)"                         
                         style="max-width: 200px; max-height: 200px; object-fit: cover;">
                </div>
            </div>
        </div>
    </div>
</div>




