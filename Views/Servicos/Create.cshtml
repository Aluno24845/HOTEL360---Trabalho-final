@model HOTEL360___Trabalho_final.Models.Servicos

@{
    ViewData["Title"] = "Adicionar Serviço";
}

<br />
<h1 style="color: #fff;">Adicionar Serviço</h1>


<div class="row">
    <div class="col-md-8 mb-4">
        <div class="card">
            <div class="row no-gutters">
                <div class="col-md-12">
                    <div class="card-body">
                        @* este objeto irá levar os conteúdos do formulário para o SERVIDOR
                        - o atributo 'method' define como os dados são enviados
                        - o atributo 'enctype' define que vamos enviar, também, ficheiros
                        *@
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Nome" class="control-label"></label>
                                <input asp-for="Nome" class="form-control" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Descricao" class="control-label"></label>
                                <input asp-for="Descricao" class="form-control" />
                                <span asp-validation-for="Descricao" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                @*
                                Vamos usar a variável auxiliar para ler os dados
                                do PRECO para evitar os constrangimentos do
                                processamento de vars. do tipo DECIMAL
                                *@
                                <label asp-for="PrecoAux" class="control-label"></label>
                                <input asp-for="PrecoAux" class="form-control" />
                                <span asp-validation-for="PrecoAux" class="text-danger"></span>
                            </div>

                            <div class="mt-3">
                                <br />
                                <input type="submit" value="Adicionar" class="btn btn-primary" />
                                <a class="btn btn-secondary" asp-action="Index">Regressar à listagem de Serviços</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
