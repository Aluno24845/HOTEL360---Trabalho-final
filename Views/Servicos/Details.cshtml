@model HOTEL360___Trabalho_final.Models.Servicos

@{
    ViewData["Title"] = "Detalhes do Serviço";
}

<br />
<h1 style="color: #fff;">Detalhes do Serviço</h1>
<br />



<div class="row mb-4">
    <div class="col-md-6">
        <div class="card">
            <div class="row no-gutters">
                <div class="col-md-12">
                    <div class="card-body">
                        <h1 class="card-title">@Html.DisplayFor(model => model.Nome)</h1>
                        <br />
                        <p class="card-text"><strong>@Html.DisplayNameFor(model => model.Preco): </strong> @Html.DisplayFor(model => model.Preco)€ por dia</p>
                        <p class="card-text"><strong>@Html.DisplayNameFor(model => model.Descricao): </strong> @Html.DisplayFor(model => model.Descricao)</p>
                        <br />
                        <div class="mt-3">
                            @if (User.IsInRole("Gerentes"))
                            {
                                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
                                
                            }
                            <a class="btn btn-secondary" asp-action="Index">Regressar à listagem de Serviços</a>
                        </div>
                    </div>
                </div>                
            </div>
        </div>
    </div>
</div>